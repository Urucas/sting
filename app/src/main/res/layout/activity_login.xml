<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Main">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/background"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"

         />

    <!--ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#66ffffff"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        /-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="165dp"
        android:background="#66000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="66dp"
        >

        </View>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="email"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/editextlogin_background"
        android:padding="8dp"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:id="@+id/view2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passEdit"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/editextlogin_background"
        android:hint="password"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_alignLeft="@+id/passEdit"
        android:layout_alignStart="@+id/passEdit"
        android:layout_below="@+id/passEdit"
        android:layout_alignRight="@+id/passEdit"
        android:layout_alignEnd="@+id/passEdit"
        android:id="@+id/view3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/forgot"
        android:gravity="center_horizontal"
        android:id="@+id/forgotBtt"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
    />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/loginBtt"
        android:padding="8dp"
        android:textColor="#9e7637"
        android:textSize="16sp"
        android:background="@drawable/buttonlogin_background"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
